<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <style>
      body{
        background-image: linear-gradient(to bottom right,#36d1dc,#5b86e5);
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/c2n">Confluence to Notion</a>
      </nav>
    <form action="/te" method="POST">
        <div class="container mt-5 mb-5 ">
        <textarea id="summernote" name="w3review" required>

            <%= title%>
            <%= paragraph%>
            <% list.forEach(function(item){ %> 
            <li><%= item%></li>
            <% }) %> 
            <table class="table table-bordered">
            <% table.forEach(function(tableItem) {%> 
            <tr>
              <% tableItem.forEach(function(tableItems) {%> 
            <td><%= tableItems%></td>
            <% } )%> 
            </tr>
            <% } )%> 
            </table>
        </textarea>
       <button style="margin-top:20px ;" class="btn btn-primary" type="submit" name="button">Convert</button>
    </div>
    </form>


    <script>
      $('#summernote').summernote({
        placeholder: 'Hello Type something',
        tabsize: 2,
        height: 400
      });
    </script>
  </body>
</html>
