        <div class="container" id="container" style="border: thin;">
          <div class="form-container sign-in-container">
            <h1 class="h3 mt-4 mb-2 fw-normal">Confluence To Notion</h1><h1 class="h3 mb-2 fw-normal">(or)</h1><a href="/">  Notion to Confluence</a>
<main class="form-signin">
  <form method="POST" action="/c2n">
    <!-- <img class="mb-4" src="images/img3.png" alt="" width="72" height="57"> -->
    <div class="field-wrapper ">
    <h1 class="h3 mb-3 fw-normal">Confluence Data</h1>
    <div class = form-floating>
        <div class="field-wrapper">
            <input name="cemail" type="email" id="floatingInput" required>
            <div class="field-placeholder"><span>Confluence Email</span></div>
           </div>
     
           <div class="field-wrapper">
             <input name="cPAT" type="password" id="floatingInput" required>
             <div class="field-placeholder"><span>Confluence PAT</span></div>
            </div>
     
           <div class="field-wrapper">
             <input name="cUrl" type="name" id="floatingInput" required>
             <div class="field-placeholder"><span>Confluence URL</span></div>
            </div>
            <div class="field-wrapper">
                <input name="cspaceId" type="name" id="floatingInput" required>
                <div class="field-placeholder"><span>Confluence Space ID</span></div>
               </div>
            <div class="field-wrapper">
                <input name="cspaceTitle" type="name" id="floatingInput" required>
                <div class="field-placeholder"><span>Confluence Page Title</span></div>
            </div>
      <h1 class="h3 mb-3 fw-normal">Target Notion Data</h1>
      <div class="field-wrapper">
        <input name="nAPI" type="password" id="floatingFirstname" required autofocus>
        <div class="field-placeholder"><span>Notion API Key</span></div>
       </div>
  
        <div class="field-wrapper">
         <input name="nBID" type="name" id="floatingLastname"  required>
         <div class="field-placeholder"><span>Notion Block ID</span></div>
        </div>
        </div>
      </div>
         <button class="w-100 btn btn-lg btn-danger" type="submit">Go</button>
         <p class="mt-3 mb-3 text-muted">&copy; KGSN</p>
  </form>
</main>
</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  $(function () {

$(".field-wrapper .field-placeholder").on("click", function () {
    $(this).closest(".field-wrapper").find("input").focus();
});
$(".field-wrapper input").on("keyup", function () {
    var value = $.trim($(this).val());
    if (value) {
        $(this).closest(".field-wrapper").addClass("hasValue");
    } else {
        $(this).closest(".field-wrapper").removeClass("hasValue");
    }
});

});

$(window).bind("pageshow", function() {
var form = $('form');
// let the browser natively reset defaults
form[0].reset();
});

</script>

